<div>
  <h3>Contact list</h3>
<div>
<form action="/" method="get">
  <label name="sortby"> Sort by: 
    <input type="txt" name="sort" value="<%= params[:sort] %>">
  </label>
</form>
<!-- <p><%= @contacts %></p> Remove once finished -->

<ul>
  <% @contacts.each do |contact| %>
    <li> Name: <a href="/<%= contact[:name] %>/details"><%= contact[:name] %></a> Phone: <%= contact[:phone] %> Email: <%= contact[:email] || "N/A" %> Category: <%= contact[:category] %>
      <form action="/<%= contact[:name] %>/delete" method="post">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>

<a href="/addcontact">Add a contact</a>

<form action="/signout" method="post">
  <button type="submit">Sign Out</button>
</form>